{
  "name": "Horde LLM CPU Worker (Codespaces)",

  "dockerFile": "Dockerfile",
  "context": "..",

  "hostRequirements": {
    "cpus": 8
  },

  "waitFor": "postCreateCommand",
  "overrideCommand": true,
  "remoteUser": "root",

  "postCreateCommand": "chmod +x /usr/local/bin/start-all.sh",

  "postStartCommand": "/usr/local/bin/start-all.sh",

  "containerEnv": {
    "HORDE_URL": "https://stablehorde.net",
    "HORDE_WORKER_NAME": "cpu-llm-space-worker",
    "HORDE_MAX_THREADS": "8"
  },

  "forwardPorts": [
    2121
  ],

  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python"
      ]
    }
  }
}
