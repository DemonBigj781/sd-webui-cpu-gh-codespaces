{
  "name": "Horde LLM CPU Worker (Codespaces)",

  "dockerFile": "Dockerfile",
  "context": "..",

  "hostRequirements": {
    "cpus": 8
  },

  "waitFor": "postCreateCommand",

  "overrideCommand": true,
  "remoteUser": "root",

  "postCreateCommand": "cd /app && chmod +x update-runtime.sh && ./update-runtime.sh --scribe",

  "postStartCommand": "cd /app && nohup ./horde-scribe-bridge.sh > /var/log/horde-scribe.log 2>&1 &",

  "containerEnv": {
    "HORDE_URL": "https://stablehorde.net",
    "HORDE_WORKER_NAME": "cpu-llm-space-worker",
    "HORDE_MAX_THREADS": "8"
  },

  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
